{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=banco.db" // Certifique-se de que o caminho do banco de dados esteja correto
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning", // Registra mensagens de aviso e acima
      "Microsoft.AspNetCore": "Error" // Registra apenas erros do ASP.NET Core
    }
  },
  "AllowedHosts": "*", // Permite todos os hosts; considere restringir em produção
  "AppSettings": { // Se precisar de outras configurações
    "SomeSetting": "SomeValue" // Exemplo de configuração adicional
  }
}
